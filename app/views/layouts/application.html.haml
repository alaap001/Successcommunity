!!!
%html
	%head
		%title Success Community
		=	csrf_meta_tag 
		=	stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
		=javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

	%body
		#main_div.container-fluid
			%header
				-if user_signed_in?
					#nav_div.nav.clearfix
						%nav
							#logo_div
								.logo= image_tag ('logo.png')
							#list_div
								%ul
									%li=link_to 'Home' , root_path
									%li=link_to 'Blogs' , blogs_path
									%li=link_to 'Feeling Low?' , root_path
									%li
										=link_to 'My Profile' , root_path
										%ul
											%li=link_to current_user.name , current_user
											%li=link_to 'My Blogs' , mystory_path
											%li= link_to 'My aims' , aims_path(current_user.aims)
											%li=link_to 'Sign Out', destroy_user_session_path, method: :delete , data: {confirm: 'Are you sure ?'}
											%li=link_to 'Settings' , edit_user_registration_path
				-else
					#nav_div.nav
						%nav
							#logo_div
								.logo= image_tag ('logo.png')
							#list_div
								%ul
									%li=link_to 'Home' , root_path
									%li=link_to 'Blogs' , blogs_path
									%li=link_to 'Feeling Low?' , root_path
									%li=link_to 'Sign In',	 user_session_path
									%li=link_to 'Sign Up' ,new_user_registration_path
			=yield

